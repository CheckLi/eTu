<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_b4ffffff_10dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="余额充值"
        android:textColor="#545454"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/tv_input_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:singleLine="true"
        android:inputType="numberDecimal"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_white_5dp_stroke_1dp"
        android:hint="请输入充值金额"
        android:padding="10dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_buy_xy"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="用户充值协议"
        android:textColor="#D44041"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/div"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/div_width_1dp"
        android:showDividers="middle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textColor="#518CEA"
            android:paddingBottom="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#518CEA"
            android:textStyle="bold"
            android:text="确认"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>