<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.yitu.etu.ui.activity.AccountManageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_er"
            android:layout_width="match_parent"
            android:text="我的二维码"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/white_click_bg"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_e5e5e5"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/tv_chang_info"
            android:layout_width="match_parent"
            android:text="资料修改"
            android:padding="10dp"
            android:background="@drawable/white_click_bg"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_e5e5e5"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/tv_password_change"
            android:layout_width="match_parent"
            android:text="密码修改"
            android:textSize="15sp"
            android:padding="10dp"
            android:background="@drawable/white_click_bg"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_e5e5e5"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/tv_my_renZ"
            android:layout_width="match_parent"
            android:text="我的认证"
            android:textSize="15sp"
            android:padding="10dp"
            android:background="@drawable/white_click_bg"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_e5e5e5"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/tv_pay_password"
            android:layout_width="match_parent"
            android:text="支付密码"
            android:textSize="15sp"
            android:padding="10dp"
            android:background="@drawable/white_click_bg"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_clear_cache"
            android:layout_width="match_parent"
            android:text="清除缓存"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:background="@drawable/white_click_bg"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_e5e5e5"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/tv_about_me"
            android:layout_width="match_parent"
            android:text="关于软件"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/white_click_bg"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/login_out"
            android:layout_width="match_parent"
            android:text="退出登陆"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_click_bg"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
