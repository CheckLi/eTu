<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <FrameLayout
           android:id="@+id/fl_card_front"
           android:layout_width="match_parent"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginTop="10dp"
           android:background="@drawable/round_white_5dp"
           android:layout_height="350dp">
           <TextView
               android:layout_width="wrap_content"
               android:text="上传身份证正面照"
               android:layout_gravity="center"
               android:layout_height="wrap_content"/>
           <com.yitu.etu.widget.image.RecyclerImageView
               android:id="@+id/iv_id_card_front"
               android:layout_width="match_parent"
               android:scaleType="centerCrop"
               android:adjustViewBounds="true"
               android:layout_height="match_parent"/>
       </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_card_verso"
           android:layout_width="match_parent"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginTop="10dp"
           android:background="@drawable/round_white_5dp"
           android:layout_height="350dp">
           <TextView
               android:layout_width="wrap_content"
               android:text="上传身份证反面照"
               android:layout_gravity="center"
               android:layout_height="wrap_content"/>
           <com.yitu.etu.widget.image.RecyclerImageView
               android:id="@+id/iv_id_card_verso"
               android:layout_width="match_parent"
               android:scaleType="centerCrop"
               android:adjustViewBounds="true"
               android:layout_height="match_parent"/>
       </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_card_hand"
           android:layout_width="match_parent"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:background="@drawable/round_white_5dp"
           android:layout_height="350dp">
           <TextView
               android:layout_width="wrap_content"
               android:text="上传手持身份证照"
               android:layout_gravity="center"
               android:layout_height="wrap_content"/>
           <com.yitu.etu.widget.image.RecyclerImageView
               android:id="@+id/iv_id_card_hand"
               android:layout_width="match_parent"
               android:scaleType="centerCrop"
               android:adjustViewBounds="true"
               android:layout_height="match_parent"/>
       </FrameLayout>
    </LinearLayout>
</ScrollView>

