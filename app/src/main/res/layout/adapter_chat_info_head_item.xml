<?xml version="1.0" encoding="utf-8"?>
<com.yitu.etu.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

   <FrameLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <com.yitu.etu.widget.image.CircleImageView
           android:id="@+id/iv_head"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/default_head"/>
       <ImageView
           android:id="@+id/iv_del"
           android:visibility="gone"
           android:layout_width="wrap_content"
           android:src="@drawable/icon31"
           android:layout_gravity="center_horizontal"
           android:layout_height="wrap_content"/>
   </FrameLayout>

    <TextView
        android:id="@+id/tv_name111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="群聊名称"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="12sp"/>

</com.yitu.etu.widget.SquareLayout>
