<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yitu.etu.ui.activity.SearchResultSceneActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/tv_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:paddingBottom="4dp"
                android:paddingLeft="18dp"
                android:paddingRight="55dp"
                android:paddingTop="4dp"
                android:text="12"
                android:textColor="#FFBA44"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_dz"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center|right"
                android:adjustViewBounds="true"
                android:background="@drawable/circle"
                android:onClick="onClick"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon33" />
        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_cicle_firend_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="的撒"
            android:textColor="@color/color_3478F5"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="地址:"
                android:textColor="@color/color_818B93"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="地址"
                android:textColor="@color/color_818B93"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/bq_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="特点:"
                android:textColor="@color/color_818B93"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bq_bg2"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="地址"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="景区介绍:"
            android:textColor="@color/color_818B93"
            android:textSize="15sp" />


        <com.yitu.etu.widget.ExpandableTextView
            android:id="@+id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/id_source_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="ds"
                android:textColor="@color/color_818B93"
                android:textSize="15sp"/>

            <TextView
                android:id="@id/id_expand_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展开"
                android:layout_gravity="center"
                android:textColor="@android:color/holo_red_light" />
        </com.yitu.etu.widget.ExpandableTextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_cicle_firend_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="服务窗"
            android:textColor="@color/color_3478F5"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:text="评论"
        android:textColor="@color/color_3478F5"
        android:textSize="15sp" />
</LinearLayout>
