<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yitu.etu.ui.activity.MyShopActivity">

    <ScrollView
        style="@style/MyListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="商品名称"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tv_name"
                style="@style/recomment_edit_style"
                android:layout_marginTop="3dp"
                android:gravity="top"
                android:hint="请输入商品名称"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="商品介绍"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tv_intro"
                style="@style/recomment_edit_style"
                android:layout_marginTop="3dp"
                android:gravity="top"
                android:hint="请输入商品介绍"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="商品价格"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tv_price"
                style="@style/recomment_edit_style"
                android:layout_marginTop="3dp"
                android:gravity="top"
                android:hint="请输入商品价格"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="商品数量"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/xl_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    app:kswBackRadius="2dp"
                    app:kswThumbRadius="2dp"
                    app:kswThumbRangeRatio="2.2"
                    android:textColor="@color/black"
                    app:kswTextOn="限量"
                    app:kswTextOff="不限量"
                    android:checked="true"
                    app:kswBackDrawable="@drawable/flyme_back_drawable"
                    app:kswThumbDrawable="@drawable/switch_2"></com.kyleduo.switchbutton.SwitchButton>

                <EditText
                    android:id="@+id/tv_xl"
                    style="@style/recomment_edit_style"
                    android:layout_marginTop="3dp"
                    android:gravity="top"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="请输入商品数量"
                    android:lines="1"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="商品图片"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btn_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/icon101" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="详情图片"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <com.yitu.etu.widget.MgridView
                android:id="@+id/image_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:verticalSpacing="10dp" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
